{
  "name": "@xg4/motion",
  "version": "0.0.9",
  "description": "motion by requestAnimationFrame",
  "keywords": [
    "animation",
    "motion",
    "requestAnimationFrame"
  ],
  "homepage": "https://github.com/xg4/motion#readme",
  "bugs": {
    "url": "https://github.com/xg4/motion/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xg4/motion.git"
  },
  "license": "MIT",
  "author": "xg4 <xingor4@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "build": "npm run lint && npm run build:types && npm run build:js",
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "rollup -c -w",
    "lint": "tslint src/**/*.{ts,tsx}",
    "release": "npm run build && git commit -am \"v\"%npm_package_version% && git tag \"v\"%npm_package_version% && git push && git push --tags && npm publish --access",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint",
      "git add"
    ]
  },
  "dependencies": {
    "@xg4/easings": "^0.0.4",
    "raf": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@types/raf": "^3.4.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "rollup": "^1.4.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3"
  }
}
